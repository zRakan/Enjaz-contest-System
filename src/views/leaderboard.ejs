<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Enjaz contest - Leaderboard</title>

    <!--<link rel="stylesheet" href="/lib/animate.min.css" />-->
    <link rel="stylesheet" href="/styles/leaderboard.css" />
</head>

<body>
    <header>
        <!-- Logos -->
        <div class="logos">
            <img id="imamu-logo" src="assets/three_logo.png" alt="">
        </div>
    </header>

    <!-- Contestant Container -->
    <div id="parent_sponsor">

        <div id="header_sponsor">
            <h2>رعاة المسابقة</h2>
            <img src="assets/hand-shake.png" alt="">
        </div>

        <div id="sponsor_img">
            <img id="first_sponsor" src="assets/first_sponsor.svg" alt="">
            <img id="second_sponsor" src="assets/second_sponsor.png" alt="">
        </div>
    </div>

    <div class="contestant-contaner">
        <div id="start-ame">
            <div id="box">
                <div id="information_leaderborad">
                    <h2>المركز</h2>
                    <h2>الإسم</h2>
                    <h2>النقاط</h2>
                </div>

                <% if(data.state == 'waiting') { %>
                    <p id="not-started-yet">
                        لم تبدأ المسابقة بعد
                    </p>
                <% } %>
            </div>
        </div>
    </div>
    



    <!-- Notifications -->
    <div class="notification-container"></div>

    <footer>
        <p> بُرمج بِحُبّ من قِبل نادي الإنجاز</p>
        <p>&hearts;&#xFE0E;
    </footer>
    
    <script src="/lib/socket.io.min.js"></script>


    <script> // GLOBALS
        const GLOBALS = <%-JSON.stringify(data)%>;
    </script>

    <script src="/leaderboard.js"></script>
</body>

</html>